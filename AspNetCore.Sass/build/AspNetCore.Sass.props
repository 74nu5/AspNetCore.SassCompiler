<Project>

  <PropertyGroup>
    <SassBuildCommand Condition="$([MSBuild]::IsOSPlatform('Windows'))">$(MSBuildThisFileDirectory)..\runtimes\win-x64\sass.bat</SassBuildCommand>
    <SassBuildCommand Condition="$([MSBuild]::IsOSPlatform('Linux'))">$(MSBuildThisFileDirectory)..\runtimes\linux-x64\sass</SassBuildCommand>
    <SassBuildCommand Condition="$([MSBuild]::IsOSPlatform('OSX'))">$(MSBuildThisFileDirectory)..\runtimes\osx-x64\sass</SassBuildCommand>

    <DotNetJsonDll>$(MSBuildThisFileDirectory)..\runtimes\dotnet-json.dll</DotNetJsonDll>

    <SassAppsettingsJson Condition="'$(SassAppsettingsFile)' == ''">$(ProjectDir)appsettings.json</SassAppsettingsJson>
  </PropertyGroup>

</Project>
